@model noticias.Models.Noticia

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<h2>CREAR NUEVA NOTICIA</h2>

@using (Html.BeginForm("Crear", "Noticia", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal" style="margin-inline: 30%">
    <h4>Noticia</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.LabelFor(model => model.NidNoticia_seccion, "Sección", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
           
           
                
            @Html.DropDownListFor(model => model.NidNoticia_seccion, new List<SelectListItem> {
               new SelectListItem{ Text="Tecnologia", Value = 1.ToString() },
               new SelectListItem{ Text="Innovaciones", Value = 2.ToString() },
               new SelectListItem{ Text="Hardware", Value = 3.ToString() },
               new SelectListItem{ Text="Software", Value = 4.ToString() },
               new SelectListItem{ Text="Empresas", Value = 5.ToString() },
               new SelectListItem{ Text="Epartners", Value = 6.ToString() },


       })
         <!--   @Html.EditorFor(model => model.NidNoticia_seccion, new { htmlAttributes = new { @class = "form-control" }})-->
            @Html.ValidationMessageFor(model => model.NidNoticia_seccion, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        @Html.LabelFor(model => model.CTituloPublicacion,"Título" ,htmlAttributes: new { @class = "control-label col-md-2"} )
        <div class="col-md-10">
            @Html.EditorFor(model => model.CTituloPublicacion, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.CTituloPublicacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CContenidoPublicacion,"Contenido", htmlAttributes: new { @class = "control-label col-md-2"  })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.CContenidoPublicacion,new { @cols = "50", @rows =  "8",@style=" width: -webkit-fill-available;"} )
            @Html.ValidationMessageFor(model => model.CContenidoPublicacion, "", new { @class = "text-danger" })
        </div>
    </div>
    <hr />
    <div class="form-group">
        @Html.LabelFor(model => model.CSubtitulo,"Subtitulo", htmlAttributes: new { @class = "control-label col-md-2"  })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CSubtitulo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.CSubtitulo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CTextoSubtitulo, "Texto Subtitulo",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextAreaFor(model => model.CTextoSubtitulo, new { @cols = "50", @rows =  "8",@style=" width: -webkit-fill-available;" })
            @Html.ValidationMessageFor(model => model.CTextoSubtitulo, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.CLugarDePublicacion, "Lugar de Publicacion",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.CLugarDePublicacion, new { htmlAttributes = new { @class = "form-control"  } })
            @Html.ValidationMessageFor(model => model.CLugarDePublicacion, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CUsuCodigo,"Codigo de Usuario",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.CUsuCodigo,new { @class = "form-control", @style="border-color: gainsboro;border-style: solid;border-width: 2px;"  })
            @Html.ValidationMessageFor(model => model.CUsuCodigo, "", new { @class = "text-danger" })
        </div>
    </div>




    <!--
    <div class="form-group">
        @Html.LabelFor(model => model.IdVideo,htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.IdVideo, new { htmlAttributes = new { @class = "form-control"} })
            @Html.ValidationMessageFor(model => model.IdVideo, "", new { @class = "text-danger" })
        </div>
    </div>
        -->
    <div class="form-group">
        @Html.LabelFor(model => model.IdAutor, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor(model => model.IdAutor, new { @class = "form-control", @style="border-color: gainsboro;border-style: solid;border-width: 2px;"   })
            @Html.ValidationMessageFor(model => model.IdAutor, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Img.imagen, "Imagen Principal",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="Img.imagen" id="imagen" />
        </div>
    </div>
    <div class="form-group">           
        @Html.LabelFor(model => model.imgSecundaria.imagen, "Imagen Secundaria",htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="ImgSecundaria.imagen" id="imagen" />
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Img.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Img.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Img.Descripcion, "", new { @class = "text-danger" })
        </div>
    </div>
    <!--<asp:TextBox id="tb4" Text="Hello World!" runat="server" /> -->

    <div class="form-group" style="text-align:center">
       
        <div class="col-md-offset-2 col-md-10">

            <input type="submit" value="Crear" class="btn btn-default"  style="margin-right:10%"/>
            @Html.ActionLink("Regresar", "vistaCrud", new { inicial = 0, elementos = 1 })
        </div>
    </div>
</div>
}

